  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/bundle.js",
    "refresh": "npm run build:d && npm run build:cp",
    "build:d": "npm run clean && webpack -d --mode development",
    "build:cp": "rm -rf public/bundle.js && cp dist/bundle.js public/bundle.js",
    "dev": "npm run build:d && npm run build:cp & open ./index.html",
    "build:prod": "npm run clean && webpack -p --mode production && npm run build:cp"
  },
